extends layouts/main-layout.pug

block styles 
  link(rel="stylesheet", href="/css/main.css") 

block content  
  main
    if prods.length > 0
      .grid
        each product in prods
          article.card.product-item
            header.card__header
              h1.product__title #{product.title}
            div.card__image
              img(src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png", alt="book image")
            div.card__contemt
              h2.product__price $19.99
              p.product_description A very interesting book about so many topics
            .card__actions
              button.btn Add to Cart
    else 
      h1 No products